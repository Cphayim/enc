{
  "name": "enc-monorepo",
  "private": true,
  "author": "Cphayim <i@cphayim.me>",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "packageManager": "pnpm@7.27.0",
  "workspaces": [
    "packages/*",
    "playgrounds/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky install",
    "clean": "pnpm -r exec rimraf dist *.tsbuildinfo",
    "dev:lib": "turbo run dev --parallel --filter=@cphayim-enc/*",
    "dev:pg": "turbo run dev --parallel --filter=@playground/*",
    "test:unit": "./scripts/unit-test.ts",
    "test:coverage": "./scripts/unit-test.ts --coverage",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,md}\"",
    "cs:add": "./scripts/changeset.ts --add",
    "cs:version": "./scripts/changeset.ts --version",
    "release": "pnpm build && pnpm -r publish"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,.md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,vue}": [
      "eslint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@cphayim-enc/test-utils": "workspace:*",
    "element-plus": "^2.2.30",
    "vant": "^4.0.10",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@ombro/eslint-config-typescript": "^0.1.2",
    "@ombro/eslint-config-vue3-typescript": "^0.1.2",
    "@ombro/logger": "^2.0.0",
    "@ombro/tsconfig": "^1.4.2",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/node": "^18.13.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vitest/coverage-c8": "^0.28.5",
    "@vue/compiler-sfc": "^3.2.47",
    "@vue/test-utils": "^2.2.10",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.34.0",
    "execa": "^7.0.0",
    "globby": "^13.1.3",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "tailwindcss": "^3.2.6",
    "tsx": "^3.12.3",
    "turbo": "^1.7.4",
    "typescript": "^4.9.5",
    "unplugin-vue-define-options": "^1.2.1",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.3",
    "vitest": "^0.28.5",
    "vue-tsc": "^1.1.0"
  }
}
