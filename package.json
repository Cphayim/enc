{
  "name": "enc-monorepo",
  "private": true,
  "author": "Cphayim <i@cphayim.me>",
  "engines": {
    "node": ">=18.20.8"
  },
  "packageManager": "pnpm@9.15.9",
  "workspaces": [
    "packages/*",
    "playgrounds/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky install",
    "clean": "pnpm -r exec rimraf dist *.tsbuildinfo",
    "dev:lib": "turbo run dev --parallel --filter=@cphayim-enc/*",
    "dev:pg": "turbo run dev --parallel --filter=@playground/*",
    "test:unit": "./scripts/unit-test.ts",
    "test:coverage": "./scripts/unit-test.ts --coverage",
    "build": "turbo run build --filter=@cphayim-enc/*",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,md}\"",
    "cs:add": "./scripts/changeset.ts --add",
    "cs:version": "./scripts/changeset.ts --version",
    "release": "pnpm build && pnpm -r publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,.md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,vue}": [
      "eslint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@cphayim-enc/test-utils": "workspace:*",
    "element-plus": "^2.9.11",
    "vant": "^4.9.19",
    "vue": "^3.5.14"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@ombro/eslint-config-typescript": "^0.1.5",
    "@ombro/eslint-config-vue3-typescript": "^0.1.5",
    "@ombro/logger": "^2.0.2",
    "@ombro/tsconfig": "^2.0.1",
    "@types/node": "^18.19.103",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vue/compiler-sfc": "^3.5.14",
    "@vue/test-utils": "^2.4.6",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "execa": "^8.0.1",
    "globby": "^13.2.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "postcss-replace": "^2.0.1",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.4",
    "turbo": "^1.13.4",
    "typescript": "^5.8.3",
    "unplugin-vue-define-options": "^1.5.5",
    "vite": "^5.4.19",
    "vitepress": "1.6.3",
    "vitest": "^0.34.6",
    "vue-tsc": "^2.2.10"
  }
}
