{
  "name": "enc-monorepo",
  "private": true,
  "author": "Cphayim <i@cphayim.me>",
  "engines": {
    "node": ">=v16.20.0"
  },
  "packageManager": "pnpm@8.6.2",
  "workspaces": [
    "packages/*",
    "playgrounds/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky install",
    "clean": "pnpm -r exec rimraf dist *.tsbuildinfo",
    "dev:lib": "turbo run dev --parallel --filter=@cphayim-enc/*",
    "dev:pg": "turbo run dev --parallel --filter=@playground/*",
    "test:unit": "./scripts/unit-test.ts",
    "test:coverage": "./scripts/unit-test.ts --coverage",
    "build": "turbo run build --filter=@cphayim-enc/*",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,md}\"",
    "cs:add": "./scripts/changeset.ts --add",
    "cs:version": "./scripts/changeset.ts --version",
    "release": "pnpm build && pnpm -r publish"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,.md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,vue}": [
      "eslint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@cphayim-enc/test-utils": "workspace:*",
    "element-plus": "^2.3.6",
    "vant": "^4.5.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@ombro/eslint-config-typescript": "^0.1.3",
    "@ombro/eslint-config-vue3-typescript": "^0.1.3",
    "@ombro/logger": "^2.0.1",
    "@ombro/tsconfig": "^2.0.0",
    "@types/node": "^18.16.18",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vitest/coverage-v8": "^0.32.2",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/test-utils": "^2.3.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.43.0",
    "execa": "^7.1.1",
    "globby": "^13.1.4",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.2",
    "tsx": "^3.12.7",
    "turbo": "^1.10.3",
    "typescript": "^5.1.3",
    "unplugin-vue-define-options": "^1.3.8",
    "vite": "^4.3.9",
    "vitest": "^0.32.2",
    "vue-tsc": "^1.8.0"
  }
}
